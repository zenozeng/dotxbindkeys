#!/bin/bash

NAME="dotxbindkeys"

case "$1" in
    start|restart)
        killall xbindkeys >/dev/null 2>&1
        xbindkeys
        ;;
    start-socket-server)
        guile -s ~/.dotxbindkeys/lib/socket-server.scm
        ;;
    stop)
        killall xbindkeys >/dev/null 2>&1
        ;;
    debug)
        killall xbindkeys >/dev/null 2>&1
        xbindkeys -v
        ;;
    status)
        ps cax | grep " xbindkeys" > /dev/null
        if [ $? -eq 0 ]; then
            echo "xbindkeys is running."
        else
            echo "xbindkeys is not running."
        fi
        ;;
    send-message)
        # check format
        if [[ -z "$2" ]]; then
            echo "Usage: $NAME send-message \"message\""
            exit 3
        fi
        # send message
        timestamp=$(date +%s)
        function get_echo() {
            if [ -e /tmp/dotxbindkeys-echo ]; then
                echo $(cat /tmp/dotxbindkeys-echo)
            else
                echo 0;
            fi
        }
        while [ "$timestamp" -gt `get_echo` ]
        do
            echo "try to send message: $2 [$timestamp]"

            # check if xbindkeys running
            ps cax | grep " xbindkeys" > /dev/null
            if [ $? -eq 1 ]; then
                echo "xbindkeys is not running."
                exit 1;
            fi

            echo $2 > /tmp/dotxbindkeys
            xdotool key --clearmodifiers alt+shift+F12
        done
        echo "message sent"
        ;;
    *)
        echo "Usage: $NAME {start|stop|debug|send-message}" >&2
        exit 3
        ;;
esac
