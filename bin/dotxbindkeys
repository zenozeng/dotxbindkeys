#!/bin/bash

killall xbindkeys >/dev/null 2>&1

if [[ -z "$1" ]]
then
    xbindkeys -fg ~/.dotxbindkeys/init.scm
    exit 0
fi

if [ $1 == '-v' ]
then
    xbindkeys -v -fg ~/.dotxbindkeys/init.scm
fi

if [ $1 == '-h' ]
then
    echo "usage: dotxbindkeys [options]"
    echo "-h This help!"
    echo "-v More information on xbindkeys when it run"
fi
